<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/activity_quote_display"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="edu.teamawesome.cs246.quotes.QuoteDisplayActivity">

    <TextView android:id="@+id/quote_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:hint="@string/title_hint"/>

    <TextView android:id="@+id/quote_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/quote_tags"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/tags_hint"/>

</LinearLayout>
