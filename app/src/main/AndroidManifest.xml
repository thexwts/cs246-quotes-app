<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.groupawesome.quotetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/moroni_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ListViewSearchTestActivity"
                android:label="@string/title_activity_list_view_test"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="edu.groupawesome.quotetracker.MainActivity"/>
        </activity>
        <activity
                android:name=".QuoteDisplayActivity"
                android:label="@string/title_quote_display_test"
                android:parentActivityName=".ListViewSearchTestActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ListViewSearchTestActivity"/>
        </activity>
    </application>

</manifest>
